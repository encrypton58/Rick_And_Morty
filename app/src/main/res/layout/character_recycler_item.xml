<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/character_card"
        android:layout_width="387dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/character_item_image"
                android:layout_width="123dp"
                android:layout_height="101dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/character_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="21dp"
                android:layout_toEndOf="@+id/character_item_image"
                android:fontFamily="@font/bungee"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/character_item_status"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/character_item_name"
                android:layout_marginStart="29dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/character_item_image"
                android:fontFamily="@font/wendy_one"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/character_item_id"
                android:layout_width="98dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/bungee"
                android:gravity="center" />

            <ImageView
                android:id="@+id/character_item_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>